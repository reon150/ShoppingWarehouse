@model ShoppingWarehouse.Data.Entities.Supplier
@using ShoppingWarehouse.Resources.Generic;
@using ShoppingWarehouse.Resources.Supplier;

@{
    ViewData["Title"] = @GenericResource.Edit;
}

<h1>@GenericResource.Edit</h1>

<h4>@SupplierResource.Supplier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NationalTaxPayerRegistry" class="control-label">Cedula</label>
                <input asp-for="NationalTaxPayerRegistry" class="form-control" />
                <span asp-validation-for="NationalTaxPayerRegistry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CommercialName" class="control-label"></label>
                <input asp-for="CommercialName" class="form-control" />
                <span asp-validation-for="CommercialName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value=@GenericResource.Save class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@GenericResource.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
