@model ShoppingWarehouse.Data.Entities.Article
@using ShoppingWarehouse.Resources.Article;
@using ShoppingWarehouse.Resources.Generic;

@{
    ViewData["Title"] = @GenericResource.Create;
}

<h1>@GenericResource.Create</h1>

<h4>@ArticleResource.Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label"></label>
                <select asp-for="BrandId" class="selectpicker form-control" data-live-search="true" data-size="3" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UnitOfMeasurementId" class="control-label"></label>
                <select asp-for="UnitOfMeasurementId" class="selectpicker form-control" data-live-search="true" data-size="3" asp-items="ViewBag.UnitOfMeasurementId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SupplierId" class="control-label"></label>
                <select asp-for="SupplierId" class="selectpicker form-control" data-live-search="true" data-size="3" asp-items="ViewBag.SupplierId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" checked /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value=@GenericResource.Create class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@GenericResource.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
