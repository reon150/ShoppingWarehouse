@page
@model LogoutModel

@using ShoppingWarehouse.Resources.Pages.Account;

@{
    ViewData["Title"] = @AccountResource.LogOut;
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">@AccountResource.ClickHereToLogout</button>
            </form>
        }
        else
        {
            <p>@AccountResource.YouHaveSuccessfullyLoggedOutOfTheApplication.</p>
        }
    }
</header>